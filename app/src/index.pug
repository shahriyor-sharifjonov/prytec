doctype html
html(lang="en")
  include components/head.pug
  +head('Home')
  body 
    #loading
      script(src="https://unpkg.com/@lottiefiles/lottie-player@latest/dist/lottie-player.js")
      lottie-player(src="https://assets10.lottiefiles.com/packages/lf20_n0dsrudm.json"  background="transparent"  speed="1"  style="width: 300px; height: 300px;"  loop  autoplay)
    .page
      header.header
        include components/header.pug
        +nav('home')
      .intro 
        img(src="images/intro.webp", alt="").intro__img
